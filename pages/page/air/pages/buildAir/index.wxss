/* pages/page/electricity/pages/buildEle/buildEle.wxss */
.build-air {
  position: relative;
}
.build-air>.air-top {
  display: flex;
  height: 88rpx;
  align-items: center;
  border-bottom: 1px solid #D7D7D7;
}
.build-air>.air-top>.top-item {
  flex: 1;
  display: flex;
  height: 44rpx;
  align-items: center;
  justify-content: center;
}
.build-air>.air-top>.top-item image {
  width: 30rpx;
  height: 30rpx;
  margin-left: 10rpx;
}
.build-air>.air-top>.top-item .picker {
  display: inline-block;
}
.build-air>.air-top>.top-item .down {
  transform:rotate(-180deg);
  transform-origin:center center;
  transition:transform .2s ease-in;
}
.build-air>.air-top>.top-item .up {
  transform:rotate(0deg);
  transform-origin:center center;
  transition:transform .2s ease-in;
}
.build-air>.air-top>.top-right {
  border-left: 1rpx solid #ccc;
}
.build-air>.air-pull-down>.pull-down {
  top: 89rpx;
  z-index: 1;
  width: 100%;  
  height: 0rpx;
  overflow: hidden;
  position: absolute;
  transition: all 0.5s;
  background-color: #fff;
}
.build-air>.air-pull-down>.pull-down.up {
  height: 500rpx;
}
.build-air>.air-pull-down>.pull-down>.content {
  height: 417rpx;
  overflow: auto;
}
.build-air>.air-pull-down>.pull-down>.content>.opt-item {
  display: flex;
  height: 83rpx;
  padding: 0 20px;
  color: #656565;
  font-size: 28rpx;
  align-items: center;
  border-bottom: 1rpx solid #f1f1f1;
}
.build-air .pull-down>.content>.opt-item>.item-tit {
  flex: 1;
}
.build-air .pull-down>.content>.opt-item>image {
  width: 34rpx;
  height: 34rpx;
}
.build-air>.air-pull-down>.pull-down>.content>.opt-item.active {
  color: #3AA0FB;
}
.build-air>.air-pull-down>.pull-down>.content>.opt-item>image {
  display: none;
}
.build-air>.air-pull-down>.pull-down>.content>.active>image {
  display: block;
}
.build-air>.air-pull-down>.pull-down>.content-btn {
  display: flex;
  height: 84rpx;
  border-top: 1rpx solid #e3e3e3;
}
.build-air>.air-pull-down>.pull-down>.content-btn>.btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}
.build-air>.air-pull-down>.pull-down>.content-btn>.btn.btn-true {
  color: #fff;
  background-color: #FF6D6D;
}
