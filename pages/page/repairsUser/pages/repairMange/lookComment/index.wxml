<!--pages/page/repairsUser/pages/repairMange/lookComment/index.wxml-->
<!--评价详情-->
<view class="repair-detail">
  <view class="detail">
    <view class="detail-t">
      <view class="t-top">
        <image class="icon" src="../../../resources/icon_detail.png"></image>
        <view>报修详情</view>
      </view>
      <view class="t-cont">
        <view>报修人：{{curDetailInfo.commitName}}</view>
        <view>区域：{{curDetailInfo.buildingName}}</view>
        <view>地点：{{curDetailInfo.roomName}}</view>
        <view>设备：{{curDetailInfo.typeComment}}</view>
        <view>维修项目：{{curDetailInfo.projectComment}}</view>
        <view>报修时间：{{curDetailInfo.commitTime}}</view>
        <view>详情描述：{{curDetailInfo.details}}</view>
      </view>
    </view>
    <!-- 第二部分 -->
    <view class="detail-t detail-t2">
      <view class="t-top">
        <image class="icon" src="../../../resources/icon_detail.png"></image>
        <view>维修详情</view>
      </view>
      <view class="t-cont">
        <view>维修人：{{curDetailInfo.repairPerson}}</view>
        <view>联系方式：{{curDetailInfo.repairPersonPhone}}</view>
        <view>指派时间：{{curDetailInfo.assignTime}}</view>
        <view>完成时间：{{curDetailInfo.endTime}} </view>
        <view>时长：{{curDetailInfo.commitPerson}}小时</view>
      </view>
    </view>
    <!-- 第三部分 -->
    <view class="detail-t detail-t2">
      <view class="t-top">
        <image class="icon" src="../../../resources/icon_pingjia.png"></image>
        <view>评价结果</view>
      </view>
      <view class="t-cont">
        <view class="ping-fen" style="display:flex;flex-direction:row;align-items: center;">
          <view class="star-pos" style="display:flex;flex-direction:row;">
            <view class="stars  {{flag>=1? 'on': ''}}"></view>
            <view class="stars  {{flag>=2? 'on': ''}}"></view>
            <view class="stars  {{flag>=3? 'on': ''}}"></view>
            <view class="stars  {{flag>=4? 'on': ''}}"></view>
            <view class="stars  {{flag>=5? 'on': ''}}"></view>
          </view>
          <view class="pingjia-state">{{pingjiaText}}</view>
        </view>
        <view class="cont">{{curDetailInfo.evaluation}}</view>
      </view>
    </view>
  </view>
  <!-- <view class="detail-btn" bindtap="goZhiPai">修改维修人员</view> -->
</view>