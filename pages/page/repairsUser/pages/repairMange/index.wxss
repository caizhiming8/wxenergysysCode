/* pages/page/repairs/pages/repairMange/index.wxss */
page {
  background-color: #f1f1f1;
}
.repair-mange>.mange-top {
  display: flex;
  height: 88rpx;
  align-items: center;
  background-color: #fff;
}
.repair-mange>.mange-top>.t-item {
  flex: 1;
  color: #000;
  display: flex;
  height: 88rpx;
  font-size: 28rpx;
  text-align: center;
  position: relative;
  align-items: center;
  justify-content: center;
}
.repair-mange>.mange-top>.t-item.active {
  color: #3AA0FB;
  font-size: 28rpx;
}
.repair-mange>.mange-top>.t-item>.b-mark {
  bottom: 0;
  width: 80rpx;
  height: 4rpx;
  position: absolute;
  background-color: #fff;
}
.repair-mange>.mange-top>.t-item.active>.b-mark {
  background-color: #3AA0FB;
}
/*
 * 底部view
 */
.repair-mange>.mange-cont {
  left: 0;
  right: 0;
  bottom: 0;
  top: 100rpx;
  overflow: auto;
  position: absolute;
  /* padding: 20rpx 30rpx; */
}
.repair-mange>.mange-cont .cont-item {
  display: flex;
  position: relative;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  flex-direction: column;
  background-color: #fff;
}
.mange-cont .cont-item>.item-top {
  color: #656565;
  font-size: 28rpx;
  padding: 20rpx 20rpx 10rpx;
}
.mange-cont .cont-item>.item-top2 {
  display: flex;
  flex-wrap: wrap;
}
.mange-cont .cont-item>.item-top2>view {
  width: 320rpx;
}
.mange-cont .cont-item>.item-top>view {
  padding: 0 0 20rpx;
}
.mange-cont .cont-item>.item-bottom {
  display: flex;
  padding: 20rpx;
  font-size: 24rpx;
  align-items: center;
  border-top: 2rpx solid #EFEFEF;
}
.mange-cont .cont-item>.item-bottom>.time {
  flex: 1;
  color: #989898;
  font-size: 24rpx;
}
.mange-cont .cont-item>.item-bottom>.btn {
  color: #fff;
  width: 150rpx;
  height: 50rpx;
  display: flex;
  font-size: 24rpx;
  align-items: center;
  border-radius: 10rpx;
  justify-content: center;
  background-color: #3AA0FB;
}
.mange-cont .cont-item>.item-state {
  top: 24rpx;
  right: 0rpx;
  color: #fff;
  width: 102rpx;
  height: 48rpx;
  font-size: 22rpx;
  line-height: 48rpx;
  text-align: center;
  position: absolute;
  background-color: #EE6868;
  border-top-left-radius: 24rpx;
  border-bottom-left-radius: 24rpx;
}
.mange-cont .cont-item>.item-state.sta-default {
  background-color: #3AA0FB
}
.mange-cont .cont-item>.item-state.sta-success {
  background-color: #24AB34;
}
.mange-cont .cont-item>.item-state.sta-finished {
  background-color: #F59329;
}

/* 
 * 增加项目按钮
 */
.addProject {
  width: 45px;
  right: 30rpx;
  height: 45px;
  display: flex;
  bottom: 160rpx;
  position: fixed;
  align-items: center;
  border-radius: 45px;
  justify-content: center;
  background-color: #3AA0FB;
}
.addProject .icon {
  width: 48rpx;
  height: 48rpx;
}
