/* pages/page/alarm/pages/setting/index.wxss */
page {
  background-color: #f1f1f1;
}
.set-page>.top {
  display: flex;
  height: 90rpx;
  padding: 0 20rpx;
  background-color: #fff;
  justify-content: space-between;
  border-bottom: 1rpx solid #f1f1f1;
}
.set-page>.top>.item {
  /* flex: 1; */
  display: flex;
  height: 90rpx;
  align-items: center;
}
.set-page>.top>.item .icon {
  width: 28rpx;
  height: 25rpx;
  margin-left: 10rpx;
  vertical-align: middle;
  /* transform: rotate(90deg); */
}

.set-page>.cont {
  left: 0;
  right: 0;
  bottom: 0;
  top: 91rpx;
  overflow: auto;
  position: absolute;
}
.set-page>.cont>.item {
  padding: 0 30rpx 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #f1f1f1;
}

.touch-item {
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid #f1f1f1;
  width: 100%;
  overflow: hidden;
  background-color: #fff;
}
 
.content {
  width: 100%;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  margin-right: 0;
  /* line-height: 50rpx; */
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  -webkit-transform: translateX(180rpx);
  transform: translateX(180rpx);
  margin-left: -180rpx;
}
 
.del {
  background-color: #EF5A5A;
  width: 180rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  -webkit-transform: translateX(180rpx);
  transform: translateX(180rpx);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
}
 
.touch-move-active .content, .touch-move-active .del {
  -webkit-transform: translateX(0);
  transform: translateX(0);
}
 
.row {
  display: flex;
  flex-direction: row;
}
.row .mark {
  width: 62rpx;
  height: 100%;
  display: flex;
  align-items: center;
}
.row .mark>image {
  width: 100%;
}
.row .cont {
  flex: 1;
  margin-left: 40rpx;
}
.row .operate {
  width: 44rpx;
  height: 100%;
  display: flex;
  align-items: center;
}
.row .operate>image {
  width: 100%;
}
 
.column {
  display: flex;
}
 
.full_width {
  width: 100%;
}

/* 
 * 增加项目按钮
 */
.addProject {
  width: 45px;
  right: 30rpx;
  height: 45px;
  display: flex;
  bottom: 160rpx;
  position: fixed;
  align-items: center;
  border-radius: 45px;
  justify-content: center;
  background-color: #3AA0FB;
}
.addProject .icon {
  width: 48rpx;
  height: 48rpx;
}