/* pages/page/alarm/pages/index.wxss */
page {
  background-color: #f1f1f1;
}
.alarm-table>.top {
  display: flex;
  height: 90rpx;
  align-items: center;
  background-color: #fff;
  border-bottom: 1rpx solid #f1f1f1;
}
.alarm-table>.top.top2 {
  padding: 0 30rpx;
}
.alarm-table>.top.top2>.center {
  flex: 1;
  display: flex;
  color: #656565;
  font-size: 24rpx;
  align-items: center;
  justify-content: center;
}
.alarm-table>.top.top2>.list {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.alarm-table>.top.top2>.list>.icon {
  width: 50rpx;
  height: 50rpx;
}
.alarm-table>.top .item {
  flex: 1;
  display: flex;
  height: 46rpx;
  color: #656565;
  font-size: 28rpx;
  position: relative;
  justify-content: center;
}
.alarm-table>.top .item.r {
  border-left: 1rpx solid #C7C7C7;
}
.alarm-table>.top .item>.icon {
  width: 60rpx;
  height: 4rpx;
  bottom: -20rpx;
  position: absolute;
  background-color: #fff;
}
.alarm-table>.top .item.active>.icon {
  background-color: #3AA0FB;
}

/* 底部内容 */
.cont {
  left: 0;
  right: 0;
  bottom: 0;
  top: 180rpx;
  position: absolute;
}
.cont .item {
  color: #656565;
  font-size: 28rpx;
  padding: 30rpx 30rpx 0;
  background-color: #fff;
  border-bottom: 1rpx solid #f1f1f1;
}
.cont .item>view {
  padding-bottom: 30rpx;
}