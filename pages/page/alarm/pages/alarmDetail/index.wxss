/* pages/page/alarm/pages/alarmDetail/index.wxss */
.detail-t {
  top: 0;
  left: 0;
  right: 0;
  padding: 12rpx 30rpx;
  bottom: 100rpx;
  overflow: auto;
  position: absolute;
}
.detail-t>.t-top {
  display: flex;
  color: #282828;
  font-size: 24rpx;
  padding: 14rpx 0;
  border-bottom: 2rpx solid #EFEFEF;
}
.detail-t>.t-top>image {
  width: 34rpx;
  height: 34rpx;
  margin-right: 20rpx;
}
.t-cont {
  color: #656565;
  font-size: 28rpx;
}
.t-cont>view {
  margin-top: 30rpx;
}

.detail-b {
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  height: 100rpx;
  position: absolute;
  align-items: center;
  justify-content: center;
}
.detail-b>.btn {
  flex: 1;
  color: #fff;
  display: flex;
  height: 100rpx;
  align-items: center;
  justify-content: center;
  background-color: #3AA0FB;
}
.detail-b>.btn.r {
  background-color: #F57676;
}