/* pages/page/warm/pages/heatBalance/index.wxss */
page {
  background-color: #F1F1F1;
}
.blance-search {
  display: flex;
  padding: 20rpx 15px;
  background-color: #fff;
}
.blance-search>.top-item {
  flex: 1;
  display: flex;
  height: 44rpx;
  align-items: center;
  justify-content: center;
}
.blance-search>.top-item image {
  width: 30rpx;
  height: 30rpx;
  margin-left: 10rpx;
}


.blance-search>.seacrch {
  flex: 1;
  height: 34px;
  display: flex;
  position: relative;
  align-items: center;
  border-radius: 17px;
  background-color: #fff;
}
.blance-search>.seacrch>.input-seacrch {
  width: 100%;
  height: 28px;
  font-size: 14px;
  border-radius: 17px;
  padding: 0 60rpx 0 34rpx;
}
.blance-search>.seacrch>.icon-seacrch {
  width: 19px;
  height: 19px;
  position: absolute;
  right: 15px;
}

.blance-cont>.item {
  display: flex;
  padding: 32rpx;
  font-size: 16px;
  color: #656565;
  background-color: #fff;
  border-bottom: 1rpx solid #f1f1f1;
}
.blance-cont>.item>.l {
  flex: 1;
}
.blance-cont>.item>.l>view {
  margin-bottom: 22rpx;
}
.blance-cont>.item>.r {
  width: 50rpx;
  display: flex;
  align-items: center;
}
.blance-cont>.item>.r>.icon-point {
  width: 40rpx;
  height: 50rpx;
}
.picker {
  /* color: #aaa; */
  padding-left: 20rpx;
}