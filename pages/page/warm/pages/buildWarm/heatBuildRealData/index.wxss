/* pages/page/warm/pages/buildWarm/heatBuildRealData/index.wxss */
page {
  background-color: #f1f1f1;
}
.real-data>.real-top {
  display: flex;
  height: 88rpx;
  align-items: center;
  background-color: #ffffff;
  border-bottom: 1px solid #F1F1F1;
}
.real-data>.real-top>.top-item {
  flex: 1;
  display: flex;
  height: 44rpx;
  align-items: center;
  /* justify-content: center; */
  padding: 20rpx;
}
.real-data>.real-top>.top-item .picker {
  display: inline-block;
}
.real-data>.real-top>.top-item .cont {
  display: flex;
  align-items: center;
}
.real-data>.real-top>.top-item image {
  width: 30rpx;
  height: 30rpx;
  margin-left: 10rpx;
}
.real-data>.real-top>.top-item .down {
  transform:rotate(-180deg);
  transform-origin:center center;
  transition:transform .2s ease-in;
}
.real-data>.real-top>.top-item .up {
  transform:rotate(0deg);
  transform-origin:center center;
  transition:transform .2s ease-in;
}

.real-cont {
  margin-bottom: 10rpx;
  background-color: #ffffff;
}
.real-cont>.tit {
  display: flex;
  margin: 0 30rpx;
  color: #282828;
  font-size: 26rpx;
  padding: 30rpx 0;
  justify-content: space-between;
  border-bottom: 1rpx solid #f1f1f1;
}
.real-cont>.tit .l-tit {
  font-weight: 800;
}
.real-cont>.item {
  display: flex;
  padding: 30rpx;
  border-bottom: 1rpx solid #f1f1f1;
}
.real-cont>.item>.l-img {
  width: 46rpx;
  height: 46rpx;
}
.real-cont>.item>.r-cont {
  flex: 1;
  padding-left: 20rpx;
}
.real-cont>.item>.r-cont>.content {
  display: flex;
  color: #282828;
  font-size: 26rpx;
  margin-top: 40rpx;
}
.real-cont>.item>.r-cont>.content>view {
  flex: 1;
  display: flex;
  justify-content: center;
}