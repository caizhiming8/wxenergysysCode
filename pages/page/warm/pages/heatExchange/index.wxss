/* pages/page/warm/pages/heatExchange/index.wxss */
.heat-exchange>.top {
  height: 60px;
  display: flex;
  padding: 0 40rpx;
  align-items: center;
  border-bottom: 1px solid#E7E7E7;
}
.heat-exchange>.top>view:first-child {
  flex: 1;
}
.heat-exchange>.top>view:last-child {
  flex: 2;
}
.heat-exchange>.top>view.left {
  font-size: 14px;
  color: #3AA0FB;
}
.heat-exchange>.top>view.left .picker {
  display: inline-block;
}
.heat-exchange>.top>view.left .icon-more {
  width: 30rpx;
  height: 30rpx;
  margin-top: 6rpx;
  margin-left: 10rpx;
  transform:rotate(0deg);
}
.heat-exchange>.top>.right {
  display: flex;
  justify-content: space-between;
}
.heat-exchange>.top>.right>view {
  width: 55px;
  height: 26px;
  display: flex;
  color: #3AA0FB;
  font-size: 14px;
  border-radius: 13px;
  align-items: center;
  justify-content: center;
}
.heat-exchange>.top>.right>view.active {
  color: #fff;
  background-color: #3AA0FB;
}
/* 
  仪表盘样式
 */
.heat-exchange>.bot>.bot-item {
  padding: 40rpx;
  border-bottom: 1rpx solid #F1F1F1;
}
.heat-exchange>.bot>.bot-item>.item-tit {
  display: flex;
  align-items: center;
}
.heat-exchange>.bot>.bot-item>.item-tit>.img {
  width: 40rpx;
  height: 40rpx;
}
.heat-exchange>.bot>.bot-item>.item-tit>.tit {
  color: #282828;
  font-size: 32rpx;
  padding-left: 16rpx;
}
.heat-exchange>.bot>.bot-item>.item-cont {
  display: flex;
  height: 450rpx;
  align-items: center;
  box-sizing: border-box;
  justify-content: center;
}
.heat-exchange>.bot>.bot-item>.item-cont ec-canvas {
  width: 100%;
  height: 100%;
}
.heat-exchange>.bot>.bot-item>.item-cont>.cont-echarts {
  width: 298rpx;
  height: 197rpx;
}

.heat-exchange>.bot>.item {
  border-bottom: 1rpx solid #F1F1F1;
}
.heat-exchange>.bot>.item>.title {
  display: flex;
  margin: 0 15px;
  padding: 10px 0;
  font-size: 16px;
  align-items: center;
  border-bottom: 1rpx solid #ECECEC;
}
.heat-exchange>.bot>.item>.title>view {
  flex: 1;
  display: flex;
  align-items: center;
}
.heat-exchange>.bot>.item>.title>.left>.icon {
  width: 20px;
  height: 19px;
}
.heat-exchange>.bot>.item>.title>.left>.tit {
  padding-left: 5px;
}
.heat-exchange>.bot>.item>.title>.right {
  font-size: 14px;
  color: #656565;
  justify-content: flex-end;
}
.heat-exchange>.bot>.item>.title>.right>.normal {
  color: #18A61B;
}
.heat-exchange>.bot>.item>.title>.right>.unnormal {
  color: #18A61B;
}
.heat-exchange>.bot>.item>.cont {
  color: #656565;
  font-size: 28rpx;
  /* margin: 18rpx 26rpx; */
}
.heat-exchange>.bot>.item>.cont>.list {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 16rpx;
  padding: 18rpx 26rpx;
  border-bottom: 4rpx solid #f1f1f1;
}
.heat-exchange>.bot>.item>.cont>.list>.l {
  /* flex: 3; */
  width: 50%;
  margin: 10rpx 0;
}
.heat-exchange>.bot>.item>.cont>.list>.r {
  flex: 2;
}