/* pages/page/login/index.wxss */
.login>.bg {
  width: 750rpx;
  height: 390rpx;
  margin-top: 100rpx;
}
.login>.bg>image {
  width: 100%;
  height: 100%;
}
.form {
  padding: 32rpx;
}
.tit {
  margin: 30rpx 0;
}
.put {
  display: flex;
  align-items: center;
  padding: 30rpx 10rpx;
  border-bottom: 2rpx solid #E6E6E6;
}
.put>image {
  width: 36rpx;
  height: 36rpx;
}
.put>.user,
.put>.pass {
  width: 100%;
  padding-left: 10rpx;
}
.login-btn {
  margin: auto;
  color: #fff;
  width: 650rpx;
  height: 88rpx;
  display: flex;
  font-size: 36rpx;
  margin-top: 100rpx;
  align-items: center;
  justify-content: center;
  background-color: #3AA0FB;
}